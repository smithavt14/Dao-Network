.title { 
  text-align: right;
}

.subtitle {
  text-align: right;
  margin-bottom: 160rpx;
}

.subtitle::after {
  content: "";
  height: 40rpx;
  width: 32rpx;
  background: #FFDE59;
  position: absolute; 
  right: 0;
}

.index__background {
  height: 720rpx;
  opacity: .2;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
}

.body {
  text-align: center;
  white-space: pre-line;
}

.callout {
  font-family: 'LF Black';
  font-size: 40rpx;
  text-align: center;
  position: relative;
  z-index: 10;
  width: 88%;
  margin: 0 auto;
  margin-top: 200rpx;
}

.callout::after {
  content: "";
  background: #FFDE59;
  border-radius: 4px;
  width: 100%;
  height: 40rpx;
  position: absolute;
  bottom: -16rpx;
  left: 0;
  z-index: -10;
}

