.user-container {
  display: flex;
  align-items: center;
  height: 240rpx;
  width: 100%;
}

.user-container image {
  border-radius: 50%;
  height: 240rpx;
  width: 240rpx;
  margin-right: 32rpx;
}

.tab-container {
  display: flex;
  justify-content: space-around;
  padding: 64rpx 0 32rpx 0;
}

.tab-container .tab {
  width: 30%;
  text-align: center;
  padding-bottom: 32rpx;
  transition: all 0.3s ease;
  border-bottom: 4rpx solid white;
}

.tab-container .active {
  border-bottom: 4rpx solid #FFDE59;
}

.input-group {
  margin: 32rpx 0;
}

.input-group .name {
  font-family: 'LF Black';
  font-size: 32rpx;
}

.input-group input, textarea, .picker {
  margin-top: 16rpx;
  height: 80rpx;
  box-sizing: border-box;
  padding: 0 16rpx;
  border-radius: 4px;
  border: 1px solid #FFDE59;
  font-family: 'LF Thin';
  font-size: 32rpx;
}

.input-group .picker {
  display: flex;
  align-items: center;
  opacity: .5;
}

.input-group textarea {
  width: 100%;
  height: 400rpx;
  padding: 16rpx;
}

.input-group .placeholder {
  font-family: 'LF Thin';
  font-size: 32rpx;
  opacity: .70;
}