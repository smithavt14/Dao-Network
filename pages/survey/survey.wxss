.body {
  font-size: 32rpx;
  margin-bottom: 64rpx;
}

.input-group {
  margin: 32rpx 0;
}

.input-group .name {
  font-family: 'LF Black';
  font-size: 32rpx;
}

.input-group input, textarea, .picker {
  margin-top: 16rpx;
  height: 80rpx;
  box-sizing: border-box;
  padding: 0 16rpx;
  border-radius: 4px;
  border: 1px solid #FFDE59;
  font-family: 'LF Thin';
  font-size: 32rpx;
}

.input-group .picker {
  display: flex;
  align-items: center;
}

.input-group textarea {
  width: 100%;
  height: 400rpx;
  padding: 16rpx;
}

.input-group .placeholder {
  font-family: 'LF Thin';
  font-size: 32rpx;
  opacity: .70;
}

.step-text {
  font-family: 'LF Thin';
  font-size: 32rpx;
  text-align: center;
  width: 100%;
}