page {
  background: #FDFDFD;
}

.container {
  padding: 168rpx 32rpx 64rpx 32rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  min-height: calc(100vh - 240rpx);
  box-sizing: border-box;
}

.title {
  font-size: 80rpx;
  font-family: 'LF Black';
  margin-bottom: 0;
  width: 100%;
  text-align: center;
}

.subtitle {
  font-size: 40rpx;
  font-family: 'LF Thin';
}

.header {
  font-size: 48rpx;
  font-family: 'LF Black';
}

.subheader {
  font-size: 32rpx;
  font-family: 'LF Black'
}

.body {
  font-size: 40rpx;
  font-family: 'LF Regular';
  line-height: 40rpx;
  margin-top: 16rpx;
}

.btn-container {
  height: 240rpx;
  display: flex;
  align-items: center;
  width: 100%;
  box-sizing: border-box;
}

.btn {
  flex-grow: 1;
  flex-shrink: 0;
  border-radius: 4px;
  box-shadow: 2px 2px 8px rgba(0,0,0,0.2);
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  box-sizing: border-box;
  font-size: 40rpx;
  font-family: 'LF Black';
  margin: 0 16rpx;
}

.btn-primary {
  background: #FFDE59;
  color: black;
}

.btn-secondary {
  background: black;
  color: white;
}

.callout {
  font-family: 'LF Black';
  font-size: 40rpx;
  text-align: center;
  position: relative;
  z-index: 10;
  width: 88%;
  margin: 0 auto;
  margin-top: 200rpx;
}

.callout::after {
  content: "";
  background: #FFDE59;
  border-radius: 4px;
  width: 100%;
  height: 40rpx;
  position: absolute;
  bottom: -16rpx;
  left: 0;
  z-index: -10;
}