.container {
  padding: 176rpx 32rpx 0 32rpx;
}

.title {
  font-size: 80rpx;
  font-family: 'LF Black';
  margin-top: 80rpx;
  margin-bottom: 0;
  width: 100%;
  text-align: center;
}

.subtitle {
  font-size: 40rpx;
  font-family: 'LF Thin';
}

.header {
  font-size: 48rpx;
  font-family: 'LF Black';
}

.subheader {
  font-size: 32rpx;
  font-family: 'LF Black'
}

.body {
  font-size: 40rpx;
  font-family: 'LF Regular';
}

.btn-container {
  position: absolute;
  bottom: 0;
  height: 160rpx;
  display: flex;
  width: calc(100% - 64rpx);
  box-sizing: border-box;
}

.btn {
  flex-grow: 1;
  border-radius: 4px;
  box-shadow: 2px 2px 8px rgba(0,0,0,0.2);
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  box-sizing: border-box;
  font-size: 40rpx;
  font-family: 'LF Black';
  margin: 0 16rpx;
}

.btn-primary {
  background: #FFDE59;
  color: black;
}

.btn-secondary {
  background: black;
  color: white;
}